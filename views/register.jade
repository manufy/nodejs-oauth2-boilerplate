extends layout


block header
  include includes/header.jade

block content
  h1 Registro
  p cnsd
    section
      form(method='POST', action='/register')
        fieldset
          legend Entrar
          label Introduzca sus datos de registro
          if message
            p #{message}
          input(type='text', name='username', placeholder='Usuario…')
          input(type='text', name='password', placeholder='Contraseña…')
          input(type='text', name='email', placeholder='Email')
          span.help-block  El registro no necesita verificación.
        button.btn(type='submit') Registrarse
    hr
    a(href="/auth/twitter")
      img(src="/images/sign-in-with-twitter-l.png")